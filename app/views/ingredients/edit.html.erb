<div class="container">
	<span class="form-title">Edit Ingredient</span>
	<div class="row" style="margin-top: 30px">
		<div class="col-lg-6">
			<%= attachment_image_tag @recipe, :recipe_image, format:"jpg",
				fallback:"top_recipe.jpg", class:"recipe-image" %>
		</div>
		<div class="col-lg-6">
			<p style="border-bottom: 1px solid silver; font-size: 20px" >レシピ</p>
			<div class="row">
				<div class="col-lg-3"><p>レシピ名</p></div>
				<div class="col-lg-9"><p><%= @recipe.title %></p></div>
			</div>
			<div class="row">
				<div class="col-lg-3"><p>紹介文</p></div>
				<div class="col-lg-9"><p><%= @recipe.introduction %></p></div>
			</div>
			<div class="row">
				<div class="col-lg-3"><p>分量(何人前)</p></div>
				<div class="col-lg-9"><p><%= @recipe.amount %></p></div>
			</div>

			<p style="border-bottom: 1px solid silver; font-size: 20px" >材料</p>
			<span class="newform_<%= @recipe.id %>">
				<%= render "newform", {ingredients: @ingredients, recipe: @recipe} %>
			</span>
			<%= form_for(@ingredient, url:recipe_ingredients_path, remote: true) do |f| %>
				<div class="row" style="padding-top: 30px;">
					<div class="col-lg-6">
						<%= f.text_field :content, placeholder:"追加する具材", class:"new_form" %>
					</div>
					<div class="col-lg-3">
						<%= f.text_field :amount, :size=>"8", placeholder:"分量", class:"new_form" %>
					</div>
					<div class="col-lg-3">
						<%= f.hidden_field :recipe_id, value:@recipe.id %>
						<%= f.submit "追加", class:"btn btn-warning btn-sm" %>
					</div>
				</div>
			<% end %>
			<div style="text-align: center; margin-top: 30px;">
				<% if @recipe.recipe_status == "材料" %>
					<%= link_to "保存する",edit_recipe_cookings_path(@recipe),
					class:"btn btn-warning" %>
				<% else %>
					<%= link_to "保存する", recipe_path(@recipe),class:"btn btn-warning" %>
				<% end %>
			</div>

		</div>
	</div>
	<div class="row" style="margin-top:30px; padding-bottom: 100px;">
		<div class="col-lg-12">
			<% @sum = 0 %>
			<% @recipe.cookings.each do |cooking| %>
				<div class="row" style="margin-bottom: 10px">
					<div class="col-lg-1" style="text-align: right"  >
						<%= @sum += 1 %>.
					</div>
					<div class="col-lg-11">
						<%= cooking.content %>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>