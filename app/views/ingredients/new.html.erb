<div class="container">
	<span class="form-title">New Recipe</span>
	<div class="row" style="margin-top: 30px">
		<div class="col-lg-6">
			<%= attachment_image_tag @recipe, :recipe_image, format:"jpg",
				fallback:"logo.jpg", size:"400x300" %>
			<table class="table table-borderless">
				<tr>
					<th>レシピ名</th>
					<td><%= @recipe.title %>
					</td>
				</tr>
				<tr>
					<th>紹介文</th>
					<td><%= @recipe.introduction %></td>
				</tr>
				<tr>
					<th>分量(何人分)</th>
					<td><%= @recipe.amount %></td>
				</tr>
			</table>
		</div>
		<div class="col-lg-6">
			<% @ingredients.each do |ingredient| %>
				<div class="row" style="margin-bottom: 10px">
					<div class="col-lg-6">
						<%= ingredient.content %>
					</div>
					<div class="col-lg-3">
						<%= ingredient.amount %>
					</div>
					<div class="col-lg-3">
						<%= link_to "削除", recipe_ingredient_path(@recipe, ingredient),method: :delete, class:"btn btn-danger btn-sm" %>
					</div>
				</div>
			<% end %>
			<%= form_for(@ingredient, url:recipe_ingredients_path) do |f| %>
				<div class="row" style="padding-top: 30px;border-top: 1px solid #F96167">
					<div class="col-lg-6">
						<span>具材</span>
						<%= f.text_field :content %>
					</div>
					<div class="col-lg-3">
						<span>分量</span>
						<%= f.text_field :amount, :size=>"5" %>
					</div>
					<div class="col-lg-3">
						<%= f.hidden_field :recipe_id, value:@recipe.id %>
						<%= f.submit "追加", class:"btn btn-warning btn-sm" %>
					</div>
				</div>
			<% end %>
			<div style="text-align: center; margin-top: 50px">
				<%= link_to "作り方の入力に進む",new_recipe_cooking_path(@recipe),
					class:"btn btn-warning" %>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">Step</div>
	</div>
</div>