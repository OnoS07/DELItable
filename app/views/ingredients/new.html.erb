<div class="container">
	<span class="form-title">New Recipe</span>
	<div class="row" style="margin-top: 30px">
		<div class="col-lg-6">
			<%= attachment_image_tag @recipe, :recipe_image, format:"jpg",
				fallback:"top_recipe.jpg", class:"recipe-image" %>
		</div>
		<div class="col-lg-6">
			<p style="border-bottom: 1px solid silver; font-size: 20px" >レシピ
				<%= link_to "編集", edit_recipe_path(@recipe),class:"btn btn-warning btn-sm", data: {"turbolinks" => false} %>
			</p>
			<% if flash[:create] %>
			 	<div class="good-flash"><i class="fas fa-exclamation-circle">
			 		<%= flash[:create]%></i>
			 	</div>
			<% end %>
			<div class="row">
				<div class="col-lg-3"><p>レシピ名</p></div>
				<div class="col-lg-9"><p><%= @recipe.title %></p></div>
			</div>
			<div class="row">
				<div class="col-lg-3"><p>紹介文</p></div>
				<div class="col-lg-9"><p><%= @recipe.introduction %></p></div>
			</div>
			<div class="row">
				<div class="col-lg-3"><p>分量(何人前)</p></div>
				<div class="col-lg-9"><p><%= @recipe.amount %></p></div>
			</div>
			<p style="border-bottom: 1px solid silver; font-size: 20px;margin-top:20px" >材料</p>
			<span class="newform_<%= @recipe.id %>">
				<%= render "newform", ingredients: @ingredients %>
			</span>
			<%= form_for(@ingredient, url:recipe_ingredients_path, remote: true) do |f| %>
				<div class="row" style="padding-top: 30px;">
					<div class="col-lg-6">
						<span>具材</span>
						<%= f.text_field :content, class:"new_form" %>
					</div>
					<div class="col-lg-3">
						<span>分量</span>
						<%= f.text_field :amount, :size=>"5", class:"new_form" %>
					</div>
					<div class="col-lg-3">
						<%= f.hidden_field :recipe_id, value:@recipe.id %>
						<%= f.submit "追加", class:"btn btn-warning btn-sm" %>
					</div>
				</div>
			<% end %>
			<div style="text-align: center; margin-top: 50px">
				<%= link_to "作り方の入力に進む",new_recipe_cooking_path(@recipe),
					class:"btn btn-warning" %>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<p style="border-bottom: 1px solid silver; font-size: 20px" >作り方</p>
		</div>
	</div>
</div>