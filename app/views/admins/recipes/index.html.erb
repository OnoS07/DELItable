<div class="container">
	<div class="row">
		<div class="col-lg-10 offset-lg-1">
			<span class="form-title">レシピ一覧</span>
			<table class="table table-bordered" style="margin-top: 30px;">
				<tr class="table-active">
					<th>レシピ名</th>
					<th>作成者</th>
					<th>更新日</th>
					<th>ステータス</th>
				</tr>
				<% @recipes.each do |recipe| %>
				<tr>
					<td class="align-middle">
						<%= link_to admins_recipe_path(recipe) do %><%= recipe.title %><% end %>
					</td>
					<td class="align-middle">
						<%= link_to admins_customer_path(recipe.customer) do %><%= recipe.customer.name %>
						<% end %>
					</td>

					<td class="align-middle"><%= recipe.updated_at.strftime('%Y/%m/%d') %></td>
					<td class="align-middle"><%= recipe.recipe_status %></td>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>
