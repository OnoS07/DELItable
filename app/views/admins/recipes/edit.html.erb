<div class="container">
	<span class="form-title">レシピ編集</span>
	<div class="row" style="margin-top: 30px">
		<div class="col-lg-6">
			<%= form_for(@recipe, url: admins_recipe_path) do |f| %>
			<p>料理画像</p>
			<%= f.attachment_field :recipe_image %>
		</div>
		<div class="col-lg-6">
			<p style="border-bottom: 1px solid #F5F5F5; font-size: 20px" >レシピ</p>
				<div class="row">
					<div class="col-lg-3"></div>
					<div class="col-lg-9"><p><%= f.text_field :title, autocomplete: "off",
							style:"width:80%",placeholder:"レシピ名" %></p>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-3"></div>
					<div class="col-lg-9"><p><%= f.text_area :introduction, autocomplete: "off",rows:"3",style:"width:100%",placeholder:"紹介文" %></p></div>
				</div>
				<div class="row">
					<div class="col-lg-3"></div>
					<div class="col-lg-9"><%= f.text_field :amount, autocomplete: "off",style:"width:80%",placeholder:"分量(何人前)" %></div>
				</div>
				<div style="text-align: center;margin: 20px 0">
					<%= f.submit "編集を保存する", class:"btn btn-warning" %>
				</div>
			<% end %>
			<p style="border-bottom: 1px solid silver; font-size: 20px" >材料</p>
			<% @recipe.ingredients.each do |ingredient| %>
				<div class="row" style="margin-bottom: 10px">
					<div class="col-lg-8">
						<%= ingredient.content %>
					</div>
					<div class="col-lg-4">
						<%= ingredient.amount %>
					</div>
				</div>
			<% end %>
		</div>
	</div>
	<div class="row" style="margin-top:30px; padding-bottom: 100px;">
		<div class="col-lg-12">
			<p style="border-bottom: 1px solid silver; font-size: 20px" >作り方</p>
			<% @sum = 0 %>
			<% @recipe.cookings.each do |cooking| %>
				<div class="row" style="margin-bottom: 10px">
					<div class="col-lg-8">
						<%= @sum += 1 %>.
						<%= cooking.content %>
					</div>
					<div class="col-lg-4">
						<span>写真(仮)</span>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>