<div class="container">
	<div class="row">
		<div class="col-lg-10 offset-lg-1">
			<span class="form-title" style="font-family: none"><%= @order_title %></span>
			<table class="table table-bordered" style="margin-top: 30px;">
				<tr class="table-active">
					<th>購入日時/注文詳細</th>
					<th>購入者</th>
					<th>配送先</th>
					<th>注文個数</th>
					<th>合計金額</th>
					<th>ステータス</th>
				</tr>
				<% @orders.each do |order| %>
				<tr>
					<td class="align-middle" >
						<%= link_to admins_order_path(order) do %>
							<%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
						<% end %>
					</td>
					<td class="align-middle" >
						<%= link_to admins_customer_path(order.customer) do %>
							<%= order.customer.name %>
						<% end %>
					</td>
					<td class="align-middle" >
						宛名:<%= order.name %>
						〒:<%= order.postcode %><br>
						住所:<%= order.address %>
					</td>
					<td class="align-middle" >
						<% @sum = 0 %>
						<% order.order_details.each do |order_detail| %>
							<% @sum += order_detail.count.to_i %>
						<% end %>
						<%= @sum %>個
					</td>
					<td class="align-middle" >
						<%= order.total_products_cost.to_i + order.postage.to_i %>円
					</td>
					<td class="align-middle" ><%= order.order_status %></td>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>
