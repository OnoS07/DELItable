<div class="container">
	<span class="form-title">New Recipe</span>
	<div class="row" style="margin-top: 30px">
		<div class="col-lg-6">
			<%= attachment_image_tag @recipe, :recipe_image, format:"jpg",
				fallback:"logo.jpg", class:"recipe-image" %>
		</div>
		<div class="col-lg-6">
			<p style="border-bottom: 1px solid silver; font-size: 20px" >レシピ
				<%= link_to "編集", edit_recipe_path(@recipe),class:"btn btn-warning btn-sm" %>
			</p>
			<div class="row">
				<div class="col-lg-3"><p>レシピ名</p></div>
				<div class="col-lg-9"><p><%= @recipe.title %></p></div>
			</div>
			<div class="row">
				<div class="col-lg-3"><p>紹介文</p></div>
				<div class="col-lg-9"><p><%= @recipe.introduction %></p></div>
			</div>
			<div class="row">
				<div class="col-lg-3"><p>分量(何人前)</p></div>
				<div class="col-lg-9"><p><%= @recipe.amount %></p></div>
			</div>
			<p style="border-bottom: 1px solid silver; font-size: 20px;margin-top:20px">材料
				<%= link_to "編集", edit_recipe_ingredient_path(@recipe, recipe_id: @recipe.id),class:"btn btn-warning btn-sm" %>
			</p>
			<% @ingredients.each do |ingredient| %>
				<div class="row" style="margin-bottom: 10px">
					<div class="col-lg-5">
						<%= ingredient.content %>
					</div>
					<div class="col-lg-7">
						<%= ingredient.amount %>
					</div>
				</div>
			<% end %>
		</div>
	</div>

	<div class="row" style="padding-top: 30px">
		<div class="col-lg-12">
			<p style="border-bottom: 1px solid silver; font-size: 20px" >作り方</p>
			<% @sum = 0 %>
			<% @cookings.each do |cooking| %>
				<div class="row" style="margin-bottom: 10px">
					<div class="col-lg-8">
						<%= @sum += 1 %>.
						<%= cooking.content %>
					</div>
					<div class="col-lg-3">
						<span>写真(仮)</span>
					</div>
					<div class="col-lg-1">
						<%= link_to "削除", recipe_cooking_path(@recipe, cooking),method: :delete, class:"btn btn-danger btn-sm" %>
					</div>
				</div>
			<% end %>
			<%= form_for(@cooking, url:recipe_cookings_path) do |f| %>
				<div class="row" style="padding-top: 30px;">
					<div class="col-lg-8">
						<%= f.text_area :content, rows:"2",style:"width:80%",placeholder:"作り方..." %>
					</div>
					<div class="col-lg-2">
						<span>写真(仮)</span>
					</div>
					<div class="col-lg-2">
						<%= f.hidden_field :recipe_id, value:@recipe.id %>
						<%= f.submit "追加", class:"btn btn-warning btn-sm" %>
					</div>
				</div>
			<% end %>
			<div style="text-align: center; margin: 50px 0 100px 0">
				<%= link_to "レシピを投稿する",recipe_path(@recipe),
					class:"btn btn-warning", style:"padding: 5px 30px" %>
			</div>
		</div>
	</div>
</div>