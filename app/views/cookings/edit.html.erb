<div class="container">
	<span class="form-title">Edit Cooking</span>
	<div class="row" style="margin-top: 30px">
		<div class="col-lg-6">
			<%= attachment_image_tag @recipe, :recipe_image, format:"jpg",
				fallback:"logo.jpg", class:"recipe-image" %>
		</div>
		<div class="col-lg-6">
			<p style="border-bottom: 1px solid silver; font-size: 20px" >レシピ</p>
			<div class="row">
				<div class="col-lg-3"><p>レシピ名</p></div>
				<div class="col-lg-9"><p><%= @recipe.title %></p></div>
			</div>
			<div class="row">
				<div class="col-lg-3"><p>紹介文</p></div>
				<div class="col-lg-9"><p><%= @recipe.introduction %></p></div>
			</div>
			<div class="row">
				<div class="col-lg-3"><p>分量(何人前)</p></div>
				<div class="col-lg-9"><p><%= @recipe.amount %></p></div>
			</div>
			<p style="border-bottom: 1px solid silver; font-size: 20px;margin-top:20px" >材料</p>
			<% if flash[:create] %>
			 	<div class="good-flash"><i class="fas fa-check-circle"></i>
			 		<%= flash[:create]%>
			 	</div>
			<% end %>
			<% @recipe.ingredients.each do |ingredient| %>
				<div class="row" style="margin-bottom: 10px">
					<div class="col-lg-5">
						<%= ingredient.content %>
					</div>
					<div class="col-lg-7">
						<%= ingredient.amount %>
					</div>
				</div>
			<% end %>
		</div>
	</div>

	<div class="row" style="padding-top: 30px">
		<div class="col-lg-12">
			<p style="border-bottom: 1px solid #F5F5F5; font-size: 20px" >作り方</p>
			<span class="newform_<%= @recipe.id %>">
				<%= render "newform", {cookings: @cookings, recipe: @recipe} %>
			</span>
 			<%= form_for(@cooking, url:recipe_cookings_path, remote: true) do |f| %>
				<div class="row" style="padding-top: 30px;border-top: 1px solid #F5F5F5">
					<div class="col-lg-1"></div>
					<div class="col-lg-9">
						<%= f.text_area :content, rows:"2",style:"width:100%",placeholder:"作り方を入力する", class:"input-form" %>
					</div>
					<div class="col-lg-2">
						<%= f.hidden_field :recipe_id, value:@recipe.id %>
						<%= f.submit "追加", class:"btn btn-warning btn-sm" %>
					</div>
				</div>
			<% end %>
			<div style="text-align: center; margin: 50px 0 100px 0">
				<% if @recipe.recipe_status != "完成" and "未入力あり" %>
					<%= form_with(url: recipe_path(@recipe),remote: true,  method: :patch) do |f| %>
						<%= hidden_field :recipe_status, value:"完成" %>
						<%= f.submit "レシピを投稿する",class:"btn btn-warning",
							style:"padding: 5px 30px"  %>
					<% end %>
				<% else %>
					<%= link_to "保存する",recipe_path(@recipe),class:"btn btn-warning",
						style:"padding: 5px 30px" %>
				<% end %>
			</div>
		</div>
	</div>
</div>