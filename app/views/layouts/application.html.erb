<!DOCTYPE html>
<html>
  <head>
    <title>Delitable</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/5a4c917e19.js" crossorigin="anonymous"></script>
  </head>

  <body style="padding-top:6rem;">
    <div class="wrapper">
    <header class="navbar navbar-expand-lg navbar-white fixed-top">
        <div class="container">
          <%= link_to root_path, class:"navbar-brand" do %><% end %>
          <% if customer_signed_in? %>
            <ul class="nav">
              <li class="nav-item">
                <%= link_to "マイページ", customer_path(current_customer), class:"nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "レシピ", recipes_path, class:"nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "商品", products_path, class:"nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "カート", customer_cart_items_path(current_customer), 
                  class:"nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_customer_session_path,
                  method: :delete, class:"nav-link" %>
              </li>
            </ul>

          <% elsif admin_signed_in? %>
            <ul class="nav">
              
            </ul>

          <% else %>
            <ul class="nav">
              <li class="nav-item">
                <%= link_to "レシピ", recipes_path, class:"nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "商品", products_path, class:"nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "新規登録", new_customer_registration_path, class:"nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", new_customer_session_path, class:"nav-link" %>
              </li>
            </ul>
          <% end %>

        </div>
    </header>

    <%= yield %>

      <footer>
        <div class="container">
          <div class="footer-logo"></div>
        </div>
      </footer>
    </div>
  </body>
</html>
