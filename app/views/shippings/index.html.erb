<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<span class="form-title" style="font-size: 30px">My Shippings</span>
			<table class="table table-bordered" style="margin-top: 30px;">
				<thead class="thead-light">
					<tr>
						<th>郵便番号</th>
						<th>住所</th>
						<th>宛名</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
				<% @shippings.each do |shipping| %>
					<tr>
						<td class="align-middle"><%= shipping.postcode %></td>
						<td class="align-middle"><%= shipping.address %></td>
						<td class="align-middle"><%= shipping.name %></td>
						<td class="align-middle" style="text-align: center">
							<%= link_to "編集する",edit_customers_shipping_path(shipping),
									class: "btn btn-warning" %>
							<%= link_to "削除する",customers_shipping_path(shipping), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"},
									class: "btn btn-danger" %>
						</td>
					</tr>
				<% end %>
				</tbody>
			</table>
		</div>
	</div>
	<div class="row" style="margin-top: 30px">
		<div class="col-lg-12">
			<span class="form-title" style="font-size: 20px">New Shipping</span>
			<%= form_with(url:customers_shippings_path, local: true) do |f| %>
				<table class="table table-borderless">
					<tr>
						<td style="width:200px">郵便番号(ハイフンなし)</td>
						<td><%= f.text_field :postcode %></td>
					</tr>
					<tr>
						<td>住所</td>
						<td><%= f.text_field :address, style:"width:400px" %></td>
					</tr>
					<tr>
						<td>宛名</td>
						<td><%= f.text_field :name %></td>
					</tr>
				</table>
			<div>
				<%= f.submit "保存する", class:"btn btn-warning", style:"margin-left:200px" %>
			</div>
			<% end %>
		</div>
	</div>
</div>