<div class="container">
	<span class="form-title">Edit Recipe</span>
	<div class="row" style="margin-top: 30px">
		<div class="col-lg-6">
			<p style="border-bottom: 1px solid silver; font-size: 20px" >レシピ</p>
			<%= form_for(@recipe) do |f| %>
				<span>料理画像</span><br>
				<%= f.attachment_field :recipe_image %>
				<table class="table table-borderless">
					<tr>
						<th>レシピ名</th>
						<td><%= f.text_field :title, autocomplete: "off",
							style:"width:80%" %>
						</td>
					</tr>
					<tr>
						<th>紹介文</th>
						<td><%= f.text_area :introduction, autocomplete: "off",rows:"7",style:"width:100%" %></td>
					</tr>
					<tr>
						<th>分量(何人分)</th>
						<td><%= f.text_field :amount, autocomplete: "off",style:"width:80%" %></td>
					</tr>
				</table>
				<div style="text-align: center;margin: 20px 0">
					<%= f.submit "編集を保存する", class:"btn btn-warning" %>
				</div>
			<% end %>
		</div>
		<div class="col-lg-6">
			<p style="border-bottom: 1px solid silver; font-size: 20px" >材料</p>
			<% @recipe.ingredients.each do |ingredient| %>
				<div class="row" style="margin-bottom: 10px">
					<div class="col-lg-8">
						<%= ingredient.content %>
					</div>
					<div class="col-lg-4">
						<%= ingredient.amount %>
					</div>
				</div>
			<% end %>
		</div>
	</div>
	<div class="row" style="margin-top:30px; padding-bottom: 100px;">
		<div class="col-lg-12">
			<p style="border-bottom: 1px solid silver; font-size: 20px" >作り方</p>
			<% @sum = 0 %>
			<% @recipe.cookings.each do |cooking| %>
				<div class="row" style="margin-bottom: 10px">
					<div class="col-lg-8">
						<%= @sum += 1 %>.
						<%= cooking.content %>
					</div>
					<div class="col-lg-4">
						<span>写真(仮)</span>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>