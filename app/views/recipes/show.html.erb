<div class="container">
	<span class="form-title">Recipe</span>
	<div class="row" style="margin-top: 30px">
		<div class="col-lg-6">
			<p style="border-bottom: 1px solid silver; font-size: 20px" >レシピ
				<% if @recipe.customer_id == current_customer.id %>
					<%= link_to "編集", edit_recipe_path(@recipe),
						class:"btn btn-warning btn-sm" %>
				<% end %>
			</p>
			<%= attachment_image_tag @recipe, :recipe_image, format:"jpg",
				fallback:"logo.jpg", class:"recipe-image" %>
			<table class="table table-borderless table-sm">
				<tr>
					<th>レシピ名</th>
					<td><%= @recipe.title %>
					</td>
				</tr>
				<tr>
					<th>紹介文</th>
					<td><%= @recipe.introduction %></td>
				</tr>
				<tr>
					<th>分量(何人分)</th>
					<td><%= @recipe.amount %></td>
				</tr>
			</table>
		</div>
		<div class="col-lg-6">
			<p style="border-bottom: 1px solid silver; font-size: 20px" >材料
				<% if @recipe.customer_id == current_customer.id %>
					<%= link_to "編集", edit_recipe_ingredient_path(@recipe),
						class:"btn btn-warning btn-sm" %>
				<% end %>
			</p>
			<% @ingredients.each do |ingredient| %>
				<div class="row" style="margin-bottom: 10px">
					<div class="col-lg-8">
						<%= ingredient.content %>
					</div>
					<div class="col-lg-4">
						<%= ingredient.amount %>
					</div>
				</div>
			<% end %>
		</div>
	</div>
	<div class="row" style="margin-top:30px; padding-bottom: 100px;">
		<div class="col-lg-12">
			<p style="border-bottom: 1px solid silver; font-size: 20px" >作り方
				<% if @recipe.customer_id == current_customer.id %>
					<%= link_to "編集", edit_recipe_cooking_path(@recipe),
						class:"btn btn-warning btn-sm" %>
				<% end %>
			</p>
			<% @sum = 0 %>
			<% @cookings.each do |cooking| %>
				<div class="row" style="margin-bottom: 10px">
					<div class="col-lg-8">
						<%= @sum += 1 %>.
						<%= cooking.content %>
					</div>
					<div class="col-lg-4">
						<span>写真(仮)</span>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>