<div class="container">
	<span class="form-title" style="font-size: 30px;">
		<i class="fas fa-user"></i> Edit Profile
	</span>
	<div class="row" style="margin-top: 30px;">
		<div class="col-lg-4" style="text-align: center;">
		<%= form_with(model: @customer, local:true, data: {"turbolinks" => false}) do |f| %>
			<%= attachment_image_tag @customer, :profile_image, format:"jpg",
				fallback:"logo.jpg", class:"customer-image" %>
			<%= f.attachment_field :profile_image %>
		</div>
		<div class="col-lg-8">
			<table class="table table-borderless">
				<tr>
					<td class="align-middle" style="width: 200px;">ユーザー名</td>
					<td class="align-middle"><%= f.text_field :account_name %></td>
				</tr>
				<tr>
					<td class="align-middle" style="width: 200px;">自己紹介</td>
					<td class="align-middle"><%=f.text_field :introduction %></td>
				</tr>
				<tr>
					<td class="align-middle">名前</td>
					<td class="align-middle"><%= f.text_field :name %></td>
				</tr>
				<tr>
					<td class="align-middle">郵便番号</td>
					<td class="align-middle"><%= f.text_field :postcode %></td>
				</tr>
				<tr>
					<td class="align-middle">住所</td>
					<td class="align-middle">
						<%= f.text_field :address, style:"width:80%" %>
					</td>
				</tr>
				<tr>
					<td class="align-middle">電話番号</td>
					<td class="align-middle"><%= f.text_field :tel %></td>
				</tr>
				<tr>
					<td class="align-middle">メールアドレス</td>
					<td class="align-middle"><%= f.text_field :email %></td>
				</tr>
			</table>
		</div>
	</div>
	<div style="text-align: center; margin-left: 80px;">
		<%= f.submit "変更する", class:"btn btn-warning btn-center" %>
	</div>
	<% end %>
	<span style="float:right">
		<%= link_to customers_delete_path do %>
			<span class="btn btn-danger">退会する</span>
		<% end %>
	</span>
</div>
